@model StartCodingNowWebManager.ApiCommunicationModels.KimAnhAPI.StudentModel

@{
    ViewBag.Title = "Them";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}


@using (Html.BeginForm("Them","Student",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h>THÊM HỌC SINH</h>
    <hr />
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Display("Tên Học Sinh", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Giới Tính", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Sex, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Ngày Sinh", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Born, new { htmlAttributes = new { @class = "form-control", @placeholder = "mm/dd/yyyy" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Born, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Tên Phụ Huynh", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NameParent, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.NameParent, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Số Điện Thoại Phụ Huynh", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Địa Chỉ", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Email", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay Lại", "Student")
</div>
