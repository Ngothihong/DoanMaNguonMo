@model Sakura.AspNetCore.IPagedList<StartCodingNowWebManager.FF.Student>

@using Sakura.AspNetCore;

@{
    ViewBag.Title = "Student";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}
<div class="content">
    <div class="content_table">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> <a href="@Url.Action("Student","Student")">QUẢN LÍ HỌC SINH</a> </h3>
                        @using (Html.BeginForm("Student", "Student", FormMethod.Get))
                        {
                            <div class="row">
                                <div class="col-lg-6" style="right:-13%">
                                    <div class="col-md-4">
                                        <input style="color:gray" type="text" name="Search" placeholder="Nhập từ khóa cần tìm" />
                                    </div>
                                    <div class="col-md-4">
                                        <input style="color:black" type="submit" value="Tìm" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        <a href="@Url.Action("Them", "Class")"> <button style="top:1%"> Thêm Học Sinh </button> </a>
                    </div>
                    <div class="panel-body">

                        <table border="1">
                            <thead>
                                <tr>
                                    <th>Tên Học Sinh</th>
                                    <th>Giới Tính</th>
                                    <th>Ngày Sinh</th>
                                    <th>Tên Phụ Huynh</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Địa Chỉ</th>
                                    <th>Email</th>
                                    <th colspan="3"></th>
                                </tr>
                            </thead>
                            @Html.Raw(TempData["msg"])
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr id="row_@item.Idstudent">
                                        <td>@item.Name</td>
                                        <td>@item.Sex</td>
                                        <td>@item.Born</td>
                                        <td>@item.NameParent</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td> <a href="@Url.Action("Sua", "Student", new { @id = item.Idstudent})"> Sửa </a></td>
                                        <td> <a href="@Url.Action("Xoa", "Student", new { @id = item.Idstudent})"> Xóa </a> </td>
                                        <td style="width:7%; text-align:center"> <a href="@Url.Action("ChonLop", "Student", new { @id = item.Idstudent})"> Chọn Lớp </a> </td>
                                    </tr>
                                </tbody>

                            }
                        </table>
                        <pager source="@Model" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
