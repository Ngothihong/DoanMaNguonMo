@model StartCodingNowWebManager.FF.Teacher

@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}


@using (Html.BeginForm("Sua", "GiaoVien", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Sửa Giáo Viên</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Idteacher)

    <div class="form-group">
        @Html.Display("Tên Giáo Viên",  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "namegv", @required = "" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Giới Tính",  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Sex, new { htmlAttributes = new { @class = "form-control", @id = "namegv" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Số Điện Thoại",  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @id = "phonegv", @required = "" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Địa Chỉ",  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Email",  new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="email">
            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Trình Độ",  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Knowledge, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Knowledge, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Trạng Thái",  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay Lại", "GiaoVien")
</div>
