@model StartCodingNowWebManager.ApiCommunicationModels.HongHeoAPI.ArticleModel
@{
                /**/

                ViewBag.Title = "EditArticle";
                Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}

@using (Html.BeginForm("EditArticle", "TinTuc", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="text-align:center">SỬA TIN TỨC</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdArticle)
        <div style="float:left; border:groove; width:70%;margin-top:20px">
            <div style="padding:5%">
                <div class="form-group">
                    <div class="col-md-4" style="float:left">
                        @Html.Label("Tên Tin Tức")
                    </div>
                    <div class="col-md-8" >
                        @Html.TextBoxFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4" style="float:left">
                        @Html.Label("Tóm Tắt Tin Tức :")
                    </div>
                    <div class="col-md-8" >
                        @Html.TextBoxFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4" style="float:left">
                        @Html.Label("Nội Dung Tin Tức")
                    </div>
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Contents, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%",@cols = "32", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4" style="float:left">
                        @Html.Label("Ngày :")
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4" style="float:left">
                        @Html.Label("ID_Admin :")
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Idadmin, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Idadmin, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4" style="float:left">
                        @Html.Label("ID_Menu")
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.IdMenu, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.IdMenu, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                
            </div>
        </div>
        <div class="form-group" style="float:right; border:0;width:30%">
            <br />
            <div class="col-md-10" style="width:100%">
                
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                <img src="~/Assets/Image/IMGAR/@Url.Content(Model.Image)" height="220px" width="200px" id="anhnen" />

                <div style="margin-top:25px;margin-left:10px">
                    <input required class="form-control" accept="image/.jpg,image/.png" onchange="ShowImagePreview(this,document.getElementById('anhnen'))" type="file" name="files" id="anhnen" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" style="position: absolute;right: 65%; margin-top: 5%;width:10%" />
            </div>
        </div>
    </div>
}
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("ListAr","TinTuc")"> <button class="btn btn-default" style="position: absolute;right: 83%; margin-top: 3.2%; width:10%">Hủy</button> </a>
    </div>
</div>

<script>function readURL(input, id)
{

    if (input.files && input.files[0])
    {
        var reader = new FileReader();
        reader.onload = function(e) {
                // alert("fff");
                $(id)
                    .attr('src', e.target.result)
                    .width(200)
                    .height(200);

        };
        reader.readAsDataURL(input.files[0]);

        //$("#anhdaidientxtfor").val()=dt;
    }


    }

    function ShowImagePreview(imageUploader, previewImage) {
        if (imageUploader.files && imageUploader.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $(previewImage).attr('src', e.target.result);
            }
            reader.readAsDataURL(imageUploader.files[0]);
        }
    }</script>

