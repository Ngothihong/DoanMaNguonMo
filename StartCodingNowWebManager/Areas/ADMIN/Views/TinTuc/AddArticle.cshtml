@model StartCodingNowWebManager.ApiCommunicationModels.HongHeoAPI.ArticleModel
@{
    ViewBag.Title = "AddArticle";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}

@using (Html.BeginForm("AddArticle", "TinTuc", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tạo Tin Tức</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="float:left; border:groove; width:70%">
            <div style="padding:10%">
                <div class="form-group">
                    <div class="col-md-6" style="float:left">
                        @Html.Label("Mã Tin Tức ")
                    </div>
                    <div class="col-md-6" style="float:right">
                        @Html.TextBoxFor(model => model.IdArticle, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.IdArticle, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6" style="float:left">
                        @Html.Label("Tiêu Đề")
                    </div>
                    <div class="col-md-6" style="float:right">
                        @Html.TextBoxFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6" style="float:left">
                        @Html.Label("Tóm Tắt")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6" style="float:left">
                        @Html.Label("Nội Dung")
                    </div>
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.Contents, new { htmlAttributes = new { @class = "form-control" }, @cols = "32", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6" style="float:left">
                        @Html.Label("Ngày ")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6" style="float:left">
                        @Html.Label("ID_Admin")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Idadmin, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.Idadmin, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6" style="float:left; text-align:left">
                        @Html.Label("ID_Menu")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.IdMenu, new { htmlAttributes = new { @class = "form-control" }, @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.IdMenu, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group" style="float:right; border:0;width:30%">
            <br />
            <div class="col-md-10" style="width:100%">
                @*@Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                <img id="anhnen" src="" height="200px" width="200px" alt="Ảnh Khóa Học" /> <br />
                <div>
                    <input required class="form-control" accept="image/.jpg,image/.png" onchange="readURL(this, '#anhnen')" type="file" name="MultipleFiles" id="anhnen" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" style="position: absolute;right: 65%; margin-top: 5%;width:10%" />
            </div>
        </div>
    </div>
}
@*<div>
        @Html.ActionLink("Quay lại", "Course")
    </div>*@
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("ListAr","TinTuc")"> <button class="btn btn-default" style="position: absolute;right: 83%; margin-top: 3.2%; width:10%">Hủy</button> </a>
    </div>
</div>
<script>function readURL(input, id) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                // alert("fff");
                $(id)
                    .attr('src', e.target.result)
                    .width(200)
                    .height(200);

            };
            reader.readAsDataURL(input.files[0]);

            //$("#anhdaidientxtfor").val()=dt;
        }


    }</script>

