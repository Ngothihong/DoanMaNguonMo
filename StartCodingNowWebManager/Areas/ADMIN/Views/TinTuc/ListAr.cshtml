
@model Sakura.AspNetCore.IPagedList<StartCodingNowWebManager.ApiCommunicationModels.HongHeoAPI.ArticleModel>
@using Sakura.AspNetCore;
@{
    ViewBag.Title = "ListAr";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}
@*<!DOCTYPE html>*@
@if (Model != null)
{
    <html>
    <body>
        <div class="content_table">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> QUẢN LÝ TIN TỨC </h3>
                            @using (Html.BeginForm("ListAr", "TinTuc", FormMethod.Get))
                            {
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="col-md-4">
                                            <input style="color:gray" type="text" name="Search" value="Nhập từ khóa cần tìm" />
                                        </div>
                                        <div class="col-md-4">
                                            <input style="color:black" type="submit" value="Tìm" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div>
                            <a href="@Url.Action("AddArticle", "TinTuc")" id="them011"> <button> Thêm Bài Mới </button> </a>
                        </div>
                        <div class="panel-body">
                            <table border="1">
                                <thead>
                                    <tr>
                                        <th style="width:50px">Mã</th>
                                        <th>Tiêu Đề</th>
                                        <th>Ngày</th>
                                        <th>Admin</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                @Html.Raw(TempData["msg"])
                                @foreach (var item in Model)
                                {
                                    <tbody>

                                        <tr>
                                            <td style="text-align:center">
                                                @item.IdArticle
                                            </td>
                                            <td class="column1" style="text-align:center">@item.Title</td>
                                            <td class="column2" style="text-align:center">@item.Day</td>
                                            <td class="column2" style="text-align:center">@item.Idadmin</td>
                                            <td class="column3" style="text-align:center">
                                                <a href="@Url.Action("EditArticle", "TinTuc", new { id = item.IdArticle })">Sửa</a>
                                                @using (Html.BeginForm("DeleteAr", "TinTuc", FormMethod.Post))
                                                {
                                                    <a href="@Url.Action("DeleteAr", "TinTuc", new { id = item.IdArticle })">Delete</a>
                                                }
                                            </td>

                                    </tbody>
                                }
                            </table>
                            <div class="row" style="text-align:center">
                                <pager source="@Model" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!--===============================================================================================-->
        <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
        <!--===============================================================================================-->
        <script src="vendor/bootstrap/js/popper.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="vendor/select2/select2.min.js"></script>
        <!--===============================================================================================-->
        <script src="js/main.js"></script>
    </body>
</html>
}
else
{
    <h4>Có vấn đề khi kết nối đến HongHeoAPI</h4>
}

