@using Microsoft.AspNetCore.Mvc;

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/USER/Views/Shared/_Layout.cshtml";
}
<div class=" container">
    <div class=" register">
        <h1>Register</h1>
        @{
            if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
            {
                <h4 style="text-align:center; color:red; margin-bottom:5%">@ViewBag.ErrorMsg</h4>
            }
        }
                <form asp-action="Register" asp-controller="KhoaHoc" asp-area="USER" method="post">
                    <div class="col-md-6 register-top-grid">
                        <h3>Thông tin cá nhân</h3>
                        <div>
                            <span>Họ tên cha/mẹ</span>
                            <input type="text" name="NameParent">
                        </div>
                        <div>
                            <span>Họ tên học viên</span>
                            <input type="text" name="NameStudent">
                        </div>
                        <div>
                            <span>Ngày sinh</span>
                            <input type="text" name="BIRTHDAY">
                        </div>
                        <div>
                            <span>Địa chỉ</span>
                            <input type="text" name="ADDRESS">
                        </div>
                        <div>
                            <span>Số điện thoại</span>
                            <input type="text" name="Phone">
                        </div>
                        <div>
                            <span>Email</span>
                            <input type="text" name="Email">
                        </div>
                    </div>
                    <div class="col-md-6 register-top-grid">
                        <h3>Thông tin khóa học</h3>
                        <div>
                            <span>Mã khóa học</span>
                            @{
                                if (string.IsNullOrEmpty(ViewBag.IDCourse))
                                {
                                    <input type="text" value="@Context.Request.Query["Id"]" name="IDCourse" readonly>
                                }
                                else
                                {
                                    <input type="text" value="@ViewBag.IDCourse" name="IDCourse">
                                }
                            }
                        </div>
                        <div>
                            <span>Tên khóa học</span>
                            @{
                                if (string.IsNullOrEmpty(ViewBag.Name))
                                {
                                    <input type="text" value="@Context.Request.Query["Name"]" name="Name" readonly>
                                }
                                else
                                {
                                    <input type="text" value="@ViewBag.Name" name="Name">
                                }
                            }
                        </div>
                    </div>
                    <div class="col-md-6 register-bottom-grid">
                        <input type="submit" value="submit">
                    </div>
                    <div class="clearfix"> </div>

                </form>
        </div>
</div>
