@model StartCodingNowWebManager.FF.TeachingClass
@{
    Layout = null;
}
@using (Html.BeginForm("UpdateChamcong", "Chamcong", FormMethod.Post))
{
    if (Model != null)
    {
        <div style="float:left">
            <div class="search_khoahoc" style="padding-top:20px;padding-left:100px;">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.State)
                <div style="float:left;margin-left:10px">
                    <h4 style="float:left; font-family:'Times New Roman'; margin-top:8px">Lớp học</h4>
                    @Html.DropDownListFor(Model => Model.Idclass, null, new { @type = "text", @style = "width:150px; height:30px ; border:groove;  margin-left:20px" })
                    @*<input type="text" style="width:150px; height:30px ; border:groove;  margin-left:20px" />*@
                </div>
                <div style="float:left; ">
                    <h4 style="float:left; font-family:'Times New Roman'; margin-top:8px;margin-left: 20px;">Buổi học</h4>
                    @Html.DropDownListFor(Model => Model.Session, null, new { @type = "text", @style = "width:150px; height:30px ; border:groove;  margin-left:20px" })
                    @*<input type="text" style="width:150px; height:30px ; border:groove;  margin-left:20px" />*@
                </div>
                <div style="float: left; padding-left: 20px;">
                    <h4 style="float:left; font-family:'Times New Roman'; margin-top:8px">Ngày</h4>
                    @Html.EditorFor(Model => Model.Day, new { htmlAttributes = new { @type = "date", @style = "width:200px; height:30px ; border:groove;  margin-left:20px" } })
                    @*<input type="datetime" style="width:150px; height:30px ; border:groove;  margin-left:20px" value="@Model.Day.Date"/>*@
                </div>
                <div style="float:right; align-self:center;  ">
                    <button type="submit" style="margin-left:70px">Cập nhập</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <br />
      @*<p><h7>Thao tác cập nhật không khả dụng</h7></p>*@  
    }

}
